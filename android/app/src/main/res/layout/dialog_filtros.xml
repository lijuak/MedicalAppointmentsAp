<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar una Cita"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Selecciona vuestras preferencias" />

        <!-- Resto de tu layout de filtros -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Cercanía -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cercanía"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupCercania"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/cercania_cerca"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cerca" />

                    <RadioButton
                        android:id="@+id/cercania_media"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Media" />

                    <RadioButton
                        android:id="@+id/cercania_lejos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lejos" />
                </RadioGroup>

                <!-- Dinero, Facilidad, Intensidad, Temporada... -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Dinero"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupDinero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/dinero_bajo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bajo" />

                    <RadioButton
                        android:id="@+id/dinero_medio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medio" />

                    <RadioButton
                        android:id="@+id/dinero_alto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alto" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Facilidad"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupFacilidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/facil_facil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fácil" />

                    <RadioButton
                        android:id="@+id/facil_normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Normal" />

                    <RadioButton
                        android:id="@+id/facil_dificil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Difícil" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Intensidad"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupIntensidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/int_tranqui"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tranqui" />

                    <RadioButton
                        android:id="@+id/int_normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Normal" />

                    <RadioButton
                        android:id="@+id/int_intenso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Intenso" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Temporada"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/groupTemporada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/temp_cualquiera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cualquiera" />

                    <RadioButton
                        android:id="@+id/temp_invierno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invierno" />

                    <RadioButton
                        android:id="@+id/temp_verano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verano" />

                    <RadioButton
                        android:id="@+id/temp_otro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Otro" />
                </RadioGroup>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnAplicarFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Aplicar y Agitar" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_gravity="top|end"
        android:contentDescription="Cerrar" />

</FrameLayout>