<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCita"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Top Section: Doctor Info & Menu -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/ivMenuCita"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTituloCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Juan GarcÃ­a"
                    android:textColor="#2D3436"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEspecialidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_chip_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="CardiologÃ­a"
                    android:textColor="#636E72"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivMenuCita"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Opciones"
                android:padding="6dp"
                android:src="@drawable/ic_more_vert"
                app:tint="#B2BEC3" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#F1F2F6" />

        <!-- Info Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Date & Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/date_badge_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ“…"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvFechaHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Feb â€¢ 10:30"
                    android:textColor="#D84315"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Urgency Tag -->
            <View
                android:id="@+id/viewUrgencia"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_heart_filled" />

            <TextView
                android:id="@+id/tvUrgenciaPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Urgente"
                android:textColor="#636E72"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Status Tag -->
            <TextView
                android:id="@+id/tvEstadoCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_chip_background"
                android:backgroundTint="#E3F2FD"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="RESERVADA"
                android:textColor="#1976D2"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Symptoms -->
        <TextView
            android:id="@+id/tvSintomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Control de presiÃ³n arterial en consulta"
            android:textColor="#636E72"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
