<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="pantallas.CrearCita">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:title="Agendar Cita Médica"
            app:titleTextColor="?attr/colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- SELECCIONAR MÉDICO -->
            <TextView
                android:id="@+id/tvDoctorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Médico"
                android:textColor="@color/almond_cream"
                android:background="@drawable/label_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/spinnerDoctor"/>

            <Spinner
                android:id="@+id/spinnerDoctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@color/cream_white"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDoctorLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- FECHA DE LA CITA -->
            <TextView
                android:id="@+id/tvFechaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Fecha de la Cita"
                android:textColor="@color/almond_cream"
                android:background="@drawable/label_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerDoctor"
                app:layout_constraintStart_toStartOf="@+id/etFechaCita"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFechaCita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Seleccionar fecha"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@android:drawable/ic_menu_today"
                android:textColorHint="?android:attr/textColorHint"
                android:textColor="@color/dark_chocolate"
                android:background="@color/cream_white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvFechaLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- HORA DE LA CITA -->
            <TextView
                android:id="@+id/tvHoraLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Hora de la Cita"
                android:textColor="@color/almond_cream"
                android:background="@drawable/label_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/etFechaCita"
                app:layout_constraintStart_toStartOf="@+id/etHoraCita"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHoraCita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Seleccionar hora"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@android:drawable/ic_menu_recent_history"
                android:textColorHint="?android:attr/textColorHint"
                android:textColor="@color/dark_chocolate"
                android:background="@color/cream_white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHoraLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- DESCRIPCIÓN DE SÍNTOMAS -->
            <TextView
                android:id="@+id/tvSintomasLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Descripción de Síntomas"
                android:textColor="@color/almond_cream"
                android:background="@drawable/label_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/etHoraCita"
                app:layout_constraintStart_toStartOf="@+id/etSintomas"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSintomas"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:hint="Describa sus síntomas o motivo de consulta"
                android:gravity="top"
                android:textColorHint="?android:attr/textColorHint"
                android:textColor="@color/dark_chocolate"
                android:background="@color/cream_white"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvSintomasLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ¿ES CITA POR URGENCIA? -->
            <TextView
                android:id="@+id/tvUrgenciaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="¿Es cita por urgencia?"
                android:textColor="@color/almond_cream"
                android:background="@drawable/label_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/etSintomas"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleUrgencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintTop_toBottomOf="@+id/tvUrgenciaLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUrgenciaSi"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUrgenciaNo"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- BOTÓN GUARDAR -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrearCitaGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Agendar Cita"
                android:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/toggleUrgencia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
