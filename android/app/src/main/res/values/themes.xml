<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppCitas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Tu nueva paleta de colores -->
        <item name="colorPrimary">@color/blood_red</item>
        <item name="colorPrimaryVariant">@color/blushed_brick</item>
        <item name="colorOnPrimary">@color/almond_cream</item>

        <!-- Colores secundarios (puedes ajustarlos si quieres) -->
        <item name="colorSecondary">@color/dusty_taupe</item>
        <item name="colorSecondaryVariant">@color/mauve_bark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Colores de fondo y superficie -->
        <item name="android:windowBackground">@color/almond_cream</item>
        <item name="colorSurface">@color/almond_cream</item>
        <item name="colorOnSurface">@color/mauve_bark</item>

        <!-- Color para los hints (CORREGIDO) -->
        <item name="android:textColorHint">@color/dusty_taupe</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AppCitas" parent="Base.Theme.AppCitas" />
</resources>